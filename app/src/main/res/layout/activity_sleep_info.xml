<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myGColor"
    android:padding="16dp">

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/healthBenefitsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Health Benefits of Sleep:"
        app:layout_constraintTop_toBottomOf="@+id/infoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/benefit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Improves memory"
        android:backgroundTint="@color/myRedColor"
        app:layout_constraintTop_toBottomOf="@+id/healthBenefitsTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/benefit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boosts immunity"
        android:backgroundTint="@color/myRedColor"
        app:layout_constraintTop_toBottomOf="@+id/benefit1"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/benefit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enhances mood"
        android:backgroundTint="@color/myRedColor"
        app:layout_constraintTop_toBottomOf="@+id/benefit2"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/benefit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increases focus and productivity"
        app:layout_constraintTop_toBottomOf="@+id/benefit3"
        android:backgroundTint="@color/myRedColor"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/showSelectedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Selected Benefits"
        app:layout_constraintTop_toBottomOf="@+id/benefit4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/myRedColor"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
